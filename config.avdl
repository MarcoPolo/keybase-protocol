
@namespace("keybase.1")
protocol config {

	import idl "common.avdl";

	record GetCurrentStatusRes {
		boolean configured;
		boolean registered;
		boolean loggedIn;
		union { null, User } user;
	}

	GetCurrentStatusRes getCurrentStatus();

	record Config {
		string serverURI;
		string socketFile;
		boolean gpgExists;
		string gpgPath;
		string version;
		string path;
	}

	Config getConfig();
}
